<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="css/styles.css">
  <link rel="stylesheet" href="css/cart.css">
  <title>Cart</title>
</head>

<body>
    <div class="main-container">
        <%- include('partials/header') %>
        <div class="content">
            <h1>
                <span class="cart-title">
                  Your Cart
                  <img class="cart-img" src="/img/shopping-cart.png" alt="">
                </span>
              </h1>
            <div id="cart-items">
                <% if (cartItems.length > 0) { %>
                    <% cartItems.forEach((item,index)=> { %>
                        <div class="cart-item" id="cart-item-<%= index %>">
                            <div class="item-details">
                              <h3><%= item.product.name %> </h3>
                              <p>Price: $<%= item.product.price %></p>
                            </div>
                            <div class="item-info">
                              <div class="item-quantity">
                                <label for="cart-item-quantity">Quantity:</label>
                                <input type="number" min="1" name="cart-item-quantity" id="cart-item-quantity" value="<%= item.quantity %>" data-item-id="<%= item.product._id %>" data-index="<%= index %>" onchange="updateQuantity(this)">
                              </div>
                              <div class="item-subtotal">
                                <p>Subtotal: $<%= item.product.price * item.quantity %></p>
                                <button class="trash-img" data-item-id="<%=item.product._id %>" onclick="deleteItem(this,'<%=index%>')"><img src="/img/trash-can.png" alt=""></button>
                              </div>
                            </div>
                          </div>
                        <% }); %>
                        <div class="cart-summary">
                            <p><span id="item-count"><%= cartItems.length %></span> <%= cartItems.length>1?'Coins':'Coin' %></p>
                            <p>Total Price: $<span id="total-price">
                                <% let totalPrice = 0; %>
                                <% cartItems.forEach(item => { %>
                                  <% totalPrice += item.product.price * item.quantity; %>
                                <% }); %>
                                <%=totalPrice %>
                              </span></p>
                        </div>
                        </div>
                        <button class="checkout-btn">Checkout</button>
                        <% } else { %>
                            <p>Your cart is empty.</p>
                            <% } %>
                        </div>
                    </div>      
                    <%- include('partials/footer') %>
                </div>
                
                <script src="js/cart.js"></script>
                
                  
            </body>

</html>
