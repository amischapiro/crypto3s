<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="css/styles.css">
    <link rel="stylesheet" href="css/signup.css">
    <title><%= title %></title>
    <style>
        .error-message {
            color: red;
            font-size: 12px;
            margin-top: 5px;
        }
    </style>
</head>
<body>
    <div class="container">
        <% if (isuser) { %>
            <h3>User <%=username%> already exists.</h3>
        <% } %>

        <form action="/signup" method="POST" onsubmit="return validatePasswords()">
            <h2 style="text-align: center;">Sign Up</h2> 

            <label for="username">Username:</label>
            <input type="text" id="username" name="username" autocomplete="off" required>

            <label for="password">Password:</label>
            <input type="password" id="password" name="password" autocomplete="off" required>

            <label for="verify-password">Verify Password:</label>
            <input type="password" id="verify-password" name="verify-password" autocomplete="off" required>
            <div id="password-error" class="error-message"></div>

            <button type="submit">Sign Up</button>
        </form>
        <p style="text-align: center; margin-top: 10px;">Already have an account? <a href="./login">Log in</a></p>
    </div>

    <script>
        function validatePasswords() {
            var password = document.getElementById("password").value;
            var verifyPassword = document.getElementById("verify-password").value;
            var errorDiv = document.getElementById("password-error");

            if (password !== verifyPassword) {
                errorDiv.textContent = "Passwords don't match";
                return false; // Prevent form submission
            }

            return true; // Proceed with form submission
        }
    </script>
</body>
</html>
