<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="css/styles.css">
  <title>Products</title>
</head>
<body>
    <div class="main-container">
      <%- include ('partials/header') %>
    <div class="content">
        <div class="product-grid">
          <% products.forEach((product) => { %>
            <div class="product-item">
              <h2><%= product.name %></h2>
              <p><%= product.description %></p>
              <p>Price: $<%= product.price %></p>
              <a href="/product-info/<%= product.id %>">More Details</a>
            </div>
          <% }); %>
        </div>
        <form action="/addProduct" method="POST">
            <label for="coin-name">Coin name:</label>
              <input type="text" id="coin-name" name="coin-name"  required><br>
            <label for="coin-desc">Coin description:</label>
              <input type="text-area" id="coin-desc" name="coin-desc" required><br>
              <label for="coin-price">Coin price:</label>
              <input type="number" min="0" id="coin-price" name="coin-price"  required><br>
              <button type="submit">Login</button>
        </form>
    </div>
    <%- include('partials/footer') %>
  </div>
</body>

</html>
